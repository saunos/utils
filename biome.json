{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"correctness": {
				"noConstantCondition": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 80,
			"indentWidth": 2,
			"indentStyle": "space",
			"semicolons": "asNeeded",
			"trailingComma": "none",
			"quoteStyle": "single",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"arrowParentheses": "asNeeded"
		}
	}
}
